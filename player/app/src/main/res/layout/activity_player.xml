<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C4C4"
    android:gravity="center">

    <!-- Круг с обложкой -->
    <FrameLayout
        android:id="@+id/albumArtContainer"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_neomorph_circle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="UNCKNOW"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#888" />
    </FrameLayout>

    <!-- Название трека -->
    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_below="@id/albumArtContainer"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mortals"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <!-- Артисты -->
    <TextView
        android:id="@+id/tvArtist"
        android:layout_below="@id/tvSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Warriyo, Tokyo Machine и Boom Kitty"
        android:textSize="14sp"
        android:textColor="#ddd" />

    <!-- Ползунок -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_below="@id/tvArtist"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:progressTint="#aaa"
        android:thumbTint="#fff" />

    <!-- Время -->
    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_below="@id/seekBar"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:21"
        android:textColor="#777"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_below="@id/seekBar"
        android:layout_marginTop="4dp"
        android:layout_alignRight="@id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:40"
        android:textColor="#777"
        android:textSize="12sp"/>

    <!-- Кнопки управления -->
    <LinearLayout
        android:layout_below="@id/tvCurrentTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <!-- prev -->
        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="12dp"
            android:id="@+id/btnPause"
            android:background="@drawable/bg_neomorph_circle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@android:drawable/ic_media_previous"
                android:tint="#555"
                android:scaleType="fitCenter"/>
        </FrameLayout>

        <!-- play -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="12dp"
            android:id="@+id/btnPlay"
            android:background="@drawable/bg_neomorph_circle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:src="@android:drawable/ic_media_play"
                android:tint="#555"
                android:scaleType="fitCenter"/>
        </FrameLayout>

        <!-- next -->
        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="12dp"
            android:id="@+id/btnStop"
            android:background="@drawable/bg_neomorph_circle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@android:drawable/ic_media_next"
                android:tint="#555"
                android:scaleType="fitCenter"/>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
