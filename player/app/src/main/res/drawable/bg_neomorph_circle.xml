<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Тёмная размытая тень снизу справа -->
    <item android:top="8dp" android:left="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="250dp"
                android:startColor="#90000000"
            android:endColor="#00000000"
            android:centerX="0.55"
            android:centerY="0.55"/>
        </shape>
    </item>

    <!-- Светлая размытая тень сверху слева -->
    <item android:bottom="8dp" android:right="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="250dp"
                android:startColor="#90FFFFFF"
            android:endColor="#00FFFFFF"
            android:centerX="0.45"
            android:centerY="0.45"/>
        </shape>
    </item>

    <!-- Основной круг -->
    <item android:top="20dp" android:left="20dp" android:bottom="20dp" android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="#DDDDDD"/>
        </shape>
    </item>

</layer-list>
